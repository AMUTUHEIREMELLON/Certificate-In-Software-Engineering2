doctype html
head
  link(rel='stylesheet' href='/css/register.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
  title Booking Form
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
.register
  form#formId(name='register' action='/api/regregister' onsubmit='return Validate()' method='POST')
    h1 GENQ KYC FORM
    h4 Bio Data
    .row
      .col
        input#firstname.form-control(type='text' placeholder='First name' name='firstname')
        span#firstnameError
      .col
        input#lastname.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname')
        span#lastnameError
        br
    .row
      .col
        input#dateofbirth.form-control(type='date' placeholder='Date Of Birth (DD/MM/YYYY) ' name='dateofbirth')
        span#dateofbirthError
      .col 
        select.form-select(aria-label='Default select example' name='gender')
            option(select='') Select gender 
            option(value='male') male
            option(value='female') Female
        br
    h4 Location
    .row
      .col
        input#country.form-control(type='text' placeholder='Select your Country of residence' name='country')
        span#countryError
      .col
        input#district.form-control(type='text' placeholder='State/District' aria-label='Last name' name='district')
        span#districtError
        br
    .row
      .col
        input#town.form-control(type='text' placeholder='Town' name='town')
        span#townError
      .col
        input#zipcope.form-control(type='text' placeholder='Zip Code' aria-label='zipcode' name='zipcope')
        span#zipcopeError
        br
    h4 Contacts and Address
    .row
      .col
        input#phonenumber1.form-control(type='text' placeholder='Phonenumber 1' name='phonenumber1')
        span#phonenumber1Error
      .col
        input#phonenumber2.form-control(type='text' placeholder='Phonenumber 2' aria-label='Last name' name='phonenumber2')
        span#phonenumber2Error
        br
    .row
        input#email.form-control(type='email' placeholder='Email' name='email')
        span#emailError
        br
    button(type='submit' onsubmit='#') Sign Up
script(src='/js/register.js')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')


    